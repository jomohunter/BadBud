{% extends 'base.html.twig' %}

{% block title %}Traits{% endblock %}

{% block body %}
    <h1>Traits</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trait.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ trait.Nom }}</td>
            </tr>
            <tr>
                <th>Rarete</th>
                <td>{{ trait.rarete }}</td>
            </tr>
            <tr>
                <th>Type_de_trait</th>
                <td>{{ trait.typeDeTrait }}</td>
            </tr>
            <tr>
                <th>DateDeCreation</th>
                <td>{{ trait.DateDeCreation ? trait.DateDeCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ trait.Couleur }}</td>
