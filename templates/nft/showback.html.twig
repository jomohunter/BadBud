{% extends 'baseback.html.twig' %}

{% block title %}nft{% endblock %}


{% block content %}

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">List of sales</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>email</th>
                                            <th>wallet</th>
                                            <th>total</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>id</th>
                                            <th>email</th>
                                            <th>wallet</th>
                                            <th>total</th>
                                            <th></th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                    {% for nft in nfts %}
                                        <tr>
                                            <td>{{ nft.id }}</td>
                                            <td>{{ nft.name }}</td>
                                            <td>{{ nft.price }}</td>
                                            <td>{{ nft.status }}</td>
                                            <td>{{ nft.CreationDate|date('y') }}</td>
                                            <td><img src="{{asset('{{ nft.image }}')}}" ></td>
                                            <td><a href="{{ path('app_nft_edit', {'id': nft.id}) }}">edit</a>
                                            {{ include('nft/delete.html.twig') }} </td>

                                        </tr>

                                         {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


{% endblock %}