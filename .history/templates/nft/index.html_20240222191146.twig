{% extends 'basefront.html.twig' %}

{% block title %} Project {% endblock %}

{% block content %}

<div class="rn-collection-area rn-section-gapTop">
    <div class="container">
        <div class="row g-5">
                            <!-- Add New Button -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <a href="{{ path('app_n_f_t_new') }}" class="btn btn-primary">Create New Project</a>
                                </div>
                            </div>
                            <!-- End Add New Button -->
            <!-- start single collention -->
            {% for project in projects %}

            <div data-sal="slide-up" data-sal-delay="150" data-sal-duration="800" class="col-lg-4 col-xl-3 col-md-6 col-sm-6 col-12">

                <a href="{{path('show_project', {'id': project.id})}}" class="rn-collection-inner-one">
                    <div class="collection-wrapper">
                        <div class="collection-big-thumbnail">
                            <img style=" width : 200px ; height : 200 px; " src="{{ asset('uploads/photos/' ~ nft.image) }}" alt="Nft_Profile">
                        </div>
                        <div class="collenction-small-thumbnail">
                            <img src="{{ asset('uploads/' ~ project.photoURL) }}" alt="Nft_Profile">
                        </div>

                        <div class="collection-deg">
                            <h6 class="title">{{ project.nom }}</h6>
                        </div>
                        <div class="collection-deg">
                        <span class="items "> {{ project.DateDeCreation ? project.DateDeCreation|date('Y-m-d') : '' }} </span>
                    </div>
                    </div>
                </a>
                
            </div>

            {% endfor %}
            <!-- End single collention -->

        </div>
        <div class="row">
            <div class="col-lg-12" data-sal="slide-up" data-sal-delay="550" data-sal-duration="800">
                <nav class="pagination-wrapper" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link active" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>


    </div>
</div>


{% endblock %}
