{% extends 'base.html.twig' %}

{% block title %}NFT{% endblock %}

{% block body %}
    <h1>NFT</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nft.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ nft.price }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ nft.status }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ nft.CreationDate ? nft.CreationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ nft.image }}</td>
            </tr>
        </tbody>
    </table>

    

    <div class="icone-area">
        <form action="{{ path('delete_projet', {'id': nft.id}) }}" style="padding-bottom: 20px;"  method="post" onsubmit="return confirm('Are you sure you want to delete this project?')">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ nft.id) }}">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a href="{{ path('app_n_f_t_edit', {'id': nft.id}) }}" class="btn btn-primary " >Edit</a>

    </div>
{% endblock %}
