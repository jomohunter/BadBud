{% extends 'basefront.html.twig' %}

{% block title %} Project {% endblock %}

{% block content %}

<div class="rn-collection-area rn-section-gapTop">
    <div class="container">
        <div class="row g-5">
           
            <!-- start single collention -->
            {% for nft in nfts %}

            <div data-sal="slide-up" data-sal-delay="150" data-sal-duration="800" class="col-lg-4 col-xl-3 col-md-6 col-sm-6 col-12">
                <div class="rn-collection-inner-one">
                    <div class="collection-wrapper">
                        <div class="collection-big-thumbnail">
                            <img style="width: 200px; height: 200px;" src="{{ asset('uploads/photos/' ~ nft.image) }}" alt="Nft_Profile">
                        </div>
                        <div class="collection-deg">
                            <h6 class="title">{{ nft.Name }}</h6>
                        </div>
                        <div class="collection-deg">
                            <h6 class="title">{{ nft.price }} ETH </h6>
                        </div> 
                        <div class="collection-deg">
                            <span class="items">{{ nft.CreationDate ? nft.CreationDate|date('Y-m-d') : '' }}</span>
                        </div>
                        <!-- Buy Now Button (Initially Hidden) -->
                        <div class="buy-now-button , padding : 10 px ; " style="display: none;">
                            <a href="#" class="btn btn-primary">Buy Now</a>
                        </div>
                    </div>
                </div>
            </div>

            {% endfor %}
            <!-- End single collention -->

        </div>
        <div class="row">
            <div class="col-lg-12" data-sal="slide-up" data-sal-delay="550" data-sal-duration="800">
                <nav class="pagination-wrapper" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link active" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript to show/hide Buy Now button on hover
    const nftItems = document.querySelectorAll('.rn-collection-inner-one');
    nftItems.forEach(item => {
        item.addEventListener('mouseenter', () => {
            const buyNowButton = item.querySelector('.buy-now-button');
            buyNowButton.style.display = 'block';
        });
        item.addEventListener('mouseleave', () => {
            const buyNowButton = item.querySelector('.buy-now-button');
            buyNowButton.style.display = 'none';
        });
    });
</script>

{% endblock %}
