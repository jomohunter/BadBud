{% extends 'base.html.twig' %}

{% block title %}Edit Project{% endblock %}

{% block body %}
    <div class="container mt-4">
        

        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.nom, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter name'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.Description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.Description, {'attr': {'class': 'form-control', 'placeholder': 'Enter description'}}) }}
                    {{ form_errors(form.Description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.Category, 'Category', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.Category, {'attr': {'class': 'form-control', 'placeholder': 'Enter category'}}) }}
                    {{ form_errors(form.Category) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.WalletAddress, 'Wallet Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.WalletAddress, {'attr': {'class': 'form-control', 'placeholder': 'Enter wallet address'}}) }}
                    {{ form_errors(form.WalletAddress) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.DateDeCreation, 'Date of Creation', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.DateDeCreation, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.DateDeCreation) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.photoURL, 'Photo URL', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.photoURL, {'attr': {'class': 'form-control', 'placeholder': 'Enter photo URL'}}) }}
                    {{ form_errors(form.photoURL) }}
                </div>

                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a href="{{ path('app_dashboard_projects_index') }}" class="btn btn-secondary">Back to List</a>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
