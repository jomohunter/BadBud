{{ form_start(form, {'attr': {'novalidate': 'novalidate'}})}}

<div class="creat-collection-area pt--80">
    <div class="container">
        <div class="row g-5 ">
            <div class="col-lg-3 offset-1 ml_md--0 ml_sm--0">
                <div class="collection-single-wized banner">
                    <label class="title required">Logo image</label>

                    
                    
                </div>
            </div>

            <div class="col-lg-7">
                <div class="create-collection-form-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="collection-single-wized">
                                <label for="name" class="title required">Nom</label>
                                <div class="create-collection-input">
                                    {{ form_widget(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="collection-single-wized">
                                <label class="title">price</label>
                                <div class="create-collection-input">
                                        {{ form_widget(form.price) }}
                                        {{ form_errors(form.price) }}
                                </div>
                            </div>
                        </div>

                        <div style="height : 10px;"> </div>
                        <div class="col-lg-12">
                            <div class="collection-single-wized">
                                <label for="description" class="title">type de trait</label>
                                <div class="create-collection-input">
                                    {{ form_widget(form.type_de_trait) }}
                                    {{ form_errors(form.type_de_trait) }}

                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="collection-single-wized">
                                <label for="wallet" class="title">couleur</label>
                                <div class="create-collection-input">
