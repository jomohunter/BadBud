{% extends 'basefront.html.twig' %}

{% block title %}  {% endblock %}

{% block content %}


<div class="rn-breadcrumb-inner ptb--30">
    <div class="container">

        
        

            <div class="rn-activity-area rn-section-gapTop">
                <div class="container">
                    
                    <div class="row g-6 activity-direction">
                        <div class="col-lg-8 mb_dec--15">
                            <!-- single activity -->
                            <div class="single-activity-wrapper">
                                <div class="inner">
                                    <div class="read-content">
                                        <div class="thumbnail">
                                            <img style=" width : 200px ; height : 200 px; " src="{{ asset('uploads/photos/' ~ project.photoURL) }}" alt="Nft_Profile">
                                        </div>
                                        <div class="content">
                                            <a href="product-details.html">
                                                <h6 class="title">{{ project.nom }}</h6>
                                            </a>
                                            <p> <span>{{ project.description }}</span> </p>
                                            <div class="time-maintane">
                                                <div class="time data">
                                                    
                                                    <span> Category : {{ project.category }} </span>
                                                </div>
                                                <div class="user-area data">
                                                    <i data-feather="clock"></i>
                                                    <a href="#">Created: {{ project.DateDeCreation ? project.DateDeCreation|date('Y-m-d') : '' }}</a>
                                                    <a style="padding-left:20px;" href="{{ path('app_trait_new', {'id' : project.id}) }}"> add trait</a>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="icone-area">
                                        <form action="{{ path('delete_projet', {'id': project.id}) }}" style="padding-bottom: 20px;"  method="post" onsubmit="return confirm('Are you sure you want to delete this project?')">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ project.id) }}">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                        <a href="{{ path('edit_projects', {'id': project.id}) }}" class="btn btn-primary " >Edit</a>
                                        
                                    </div>
                                </div>
                            </div>
                            
        
                        </div>
                       
                    </div>
                </div>
            </div>

         
        </div>
    </div>
</div>

public/FrontOffice


{% endblock %}
